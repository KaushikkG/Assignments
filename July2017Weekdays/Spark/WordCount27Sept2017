val groupedRDD=inputRDD.flatMap(line=>line.split(" ")).groupBy(word=>word)


inputRDD.flatMap(line=>line.split(" "))
.groupBy(word=>word)
.map(x=>(x._1,x._2.size))
.saveAsTextFile("OutFiles/WCOut");
